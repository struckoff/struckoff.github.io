<!DOCTYPE html>
<html>
 <head>
  <title>Calculator 1</title>
  <meta charset="utf-8">
   <style>body {zoom:200%}</style> 
 </head>
 <body>
   <input><select><option>Ваш выбор:</option><option>+</option><option>-</option></select><input> 
   <script>
        //<![CDATA[
        var operations = [,
        	function(x, y) { return 1*x + 1*y; }, 
        	function(x, y) { return x - y; } 
        ];     
        document.querySelector("select").addEventListener("change", //EventListener
    	  function(){  
              var n1 = this.previousSibling.value; //X
              var n2 = this.nextSibling.value;     //Y
           
              console.log( operations[this.selectedIndex](n1,n2) ); //Возвращает индекс выбраного элемента
              this.selectedIndex = 0;
           }, true, false);    
     	//]]>
   </script>
 </body>
</html>
